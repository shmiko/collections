<h1>Listing conditions</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Created</th>
    <th>Updated</th>
    <th>Created person id</th>
    <th>Updated person id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conditions.each do |condition| %>
  <tr>
    <td><%= condition.Description %></td>
    <td><%= condition.Created %></td>
    <td><%= condition.Updated %></td>
    <td><%= condition.Created_Person_ID %></td>
    <td><%= condition.Updated_Person_ID %></td>
    <td><%= link_to 'Show', condition %></td>
    <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
    <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

